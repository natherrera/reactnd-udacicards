{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["dom","esnext"],
      "moduleResolution": "node",
      "noEmit": true,
      "noImplicitAny": false,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "esnext"
    },
    "exclude": [
      "node_modules",
      ".expo",
      "android",
      "ios",
      "jest.config.js"
    ],
  "include": [
    "src/**/*"
  ]
}
